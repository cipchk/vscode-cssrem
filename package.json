{
  "name": "cssrem",
  "displayName": "cssrem",
  "description": "Converts between px and rem units in VSCode",
  "version": "1.0.0",
  "publisher": "cipchk",
  "icon": "icon.png",
  "license": "MIT",
  "licenseUrl": "LICENSE",
  "engines": {
    "vscode": "^1.30.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cipchk/vscode-cssrem.git"
  },
  "bugs": {
    "url": "https://github.com/cipchk/vscode-cssrem/issues",
    "email": "cipchk@qq.com"
  },
  "homepage": "https://github.com/cipchk/vscode-cssrem",
  "keywords": [
    "rem",
    "px rem",
    "px to rem",
    "px2rem",
    "rem to px",
    "css rem",
    "wxss",
    "px to rpx",
    "rpx to px"
  ],
  "categories": [
    "Formatters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:stylus",
    "onLanguage:tpl",
    "onLanguage:wxss"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.cssrem",
        "title": "CSSRem: Px To Rem"
      },
      {
        "command": "extension.cssrem.rem-to-px",
        "title": "CSSRem: Rem To Px"
      },
      {
        "command": "extension.cssrem.px-to-rpx",
        "title": "CSSRem: Px To Rpx (小程序WXSS)"
      },
      {
        "command": "extension.cssrem.rpx-to-px",
        "title": "CSSRem: Rpx To Px (小程序WXSS)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "cssrem configuration",
      "properties": {
        "cssrem.rootFontSize": {
          "type": "number",
          "default": 16,
          "description": "root font-size (unit: px), default: 16"
        },
        "cssrem.fixedDigits": {
          "type": "number",
          "default": 6,
          "description": "Px to rem decimal point maximum length, default: 6"
        },
        "cssrem.autoRemovePrefixZero": {
          "type": "boolean",
          "default": true,
          "description": "Automatically remove prefix 0, default: true"
        },
        "cssrem.ingoresViaCommand": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Ignores `px` to `rem` when trigger command, can be set `[ \"1px\", \"0.5px\" ]`, default: []"
        },
        "cssrem.wxssScreenWidth": {
          "type": "number",
          "default": 750,
          "description": "规定屏幕宽度，默认 `750`，[尺寸单位](https://developers.weixin.qq.com/miniprogram/dev/framework/view/wxss.html)"
        },
        "cssrem.wxssDeviceWidth": {
          "type": "number",
          "default": 375,
          "description": "设备分辨率宽度，官方推荐使用 iPhone6 作为视觉稿的标准，默认：`375`"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "watch": "tsc -watch -p ./",
    "release": "vsce package"
  },
  "devDependencies": {
    "typescript": "^3.9.7",
    "vscode": "^1.1.37",
    "@types/node": "^14.0.27"
  }
}
