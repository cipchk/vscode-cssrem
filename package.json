{
  "name": "cssrem",
  "displayName": "px to rem & rpx & vw (cssrem)",
  "description": "Converts between px and rem & rpx & vw units in VSCode",
  "version": "3.0.1",
  "publisher": "cipchk",
  "icon": "icon.png",
  "license": "MIT",
  "licenseUrl": "LICENSE",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "release": "gulp package",
    "build": "gulp build",
    "watch": "gulp watch"
  },
  "engines": {
    "vscode": "^1.30.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cipchk/vscode-cssrem.git"
  },
  "bugs": {
    "url": "https://github.com/cipchk/vscode-cssrem/issues",
    "email": "cipchk@qq.com"
  },
  "homepage": "https://github.com/cipchk/vscode-cssrem",
  "keywords": [
    "rem",
    "px rem",
    "px to rem",
    "px2rem",
    "rem to px",
    "css rem",
    "wxss",
    "px to rpx",
    "rpx to px",
    "vw",
    "px to vw",
    "vw to px"
  ],
  "categories": [
    "Formatters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:css",
    "onLanguage:postcss",
    "onLanguage:less",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:stylus",
    "onLanguage:tpl",
    "onLanguage:wxss",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.cssrem",
        "title": "CSSRem: Px To Rem"
      },
      {
        "command": "extension.cssrem.rem-to-px",
        "title": "CSSRem: Rem To Px"
      },
      {
        "command": "extension.cssrem.rem-switch-px",
        "title": "CSSRem: Rem <=> Px"
      },
      {
        "command": "extension.cssrem.px-to-vw",
        "title": "CSSRem: Px To VW"
      },
      {
        "command": "extension.cssrem.vw-to-px",
        "title": "CSSRem: VW To Px"
      },
      {
        "command": "extension.cssrem.vw-switch-px",
        "title": "CSSRem: VW <=> Px"
      },
      {
        "command": "extension.cssrem.px-to-rpx",
        "title": "CSSRem: Px To Rpx (小程序WXSS)"
      },
      {
        "command": "extension.cssrem.rpx-to-px",
        "title": "CSSRem: Rpx To Px (小程序WXSS)"
      },
      {
        "command": "extension.cssrem.rpx-switch-px",
        "title": "CSSRem: Rpx <=> Px (小程序WXSS)"
      }
    ],
    "keybindings": [
      {
        "command": "extension.cssrem.rem-switch-px",
        "key": "Alt+z"
      },
      {
        "command": "extension.cssrem.vw-switch-px",
        "key": "Alt+v Alt+w"
      },
      {
        "command": "extension.cssrem.rpx-switch-px",
        "key": "Alt+r"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "cssrem configuration",
      "properties": {
        "cssrem.rootFontSize": {
          "type": "number",
          "default": 16,
          "description": "%cssrem.rootFontSize%"
        },
        "cssrem.fixedDigits": {
          "type": "number",
          "default": 4,
          "description": "%cssrem.fixedDigits%"
        },
        "cssrem.autoRemovePrefixZero": {
          "type": "boolean",
          "default": true,
          "description": "%cssrem.autoRemovePrefixZero%"
        },
        "cssrem.ingoresViaCommand": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%cssrem.ingoresViaCommand%"
        },
        "cssrem.addMark": {
          "type": "boolean",
          "default": false,
          "description": "%cssrem.addMark%"
        },
        "cssrem.hover": {
          "type": "string",
          "enum": [
            "disabled",
            "always",
            "onlyMark"
          ],
          "default": "onlyMark",
          "markdownEnumDescriptions": [
            "%cssrem.hover.disabled%",
            "%cssrem.hover.always%",
            "%cssrem.hover.onlyMark%"
          ],
          "description": "%cssrem.hover%"
        },
        "cssrem.ingores": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "%cssrem.ingores%"
        },
        "cssrem.languages": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "%cssrem.languages%"
        },
        "cssrem.currentLine": {
          "type": "string",
          "enum": [
            "disabled",
            "show"
          ],
          "default": "show",
          "markdownEnumDescriptions": [
            "%cssrem.currentLine.disabled%",
            "%cssrem.currentLine.show%"
          ],
          "description": "%cssrem.currentLine%"
        },
        "cssrem.remHover": {
          "type": "boolean",
          "default": true,
          "description": "%cssrem.remHover%"
        },
        "cssrem.vw": {
          "type": "boolean",
          "default": false,
          "description": "%cssrem.vw%"
        },
        "cssrem.vwHover": {
          "type": "boolean",
          "default": true,
          "description": "%cssrem.vwHover%"
        },
        "cssrem.vwDesign": {
          "type": "number",
          "default": 750,
          "description": "%cssrem.vwDesign%"
        },
        "cssrem.wxss": {
          "type": "boolean",
          "default": false,
          "description": "%cssrem.wxss%"
        },
        "cssrem.wxssScreenWidth": {
          "type": "number",
          "default": 750,
          "description": "%cssrem.wxssScreenWidth%"
        },
        "cssrem.wxssDeviceWidth": {
          "type": "number",
          "default": 375,
          "description": "%cssrem.wxssDeviceWidth%"
        }
      }
    },
    "colors": [
      {
        "id": "extension.cssrem.trailingLineBackgroundColor",
        "description": "Specifies the background color of the blame annotation for the current line",
        "defaults": {
          "dark": "#00000000",
          "light": "#00000000",
          "highContrast": "#00000000"
        }
      },
      {
        "id": "extension.cssrem.trailingLineForegroundColor",
        "description": "Specifies the foreground color of the blame annotation for the current line",
        "defaults": {
          "dark": "#99999970",
          "light": "#99999970",
          "highContrast": "#99999999"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "extension.cssrem",
          "group": "cssrem"
        },
        {
          "when": "editorFocus",
          "command": "extension.cssrem.rem-to-px",
          "group": "cssrem"
        },
        {
          "when": "editorFocus",
          "command": "extension.cssrem.rem-switch-px",
          "group": "cssrem"
        },
        {
          "when": "editorFocus",
          "command": "extension.cssrem.px-to-vw",
          "group": "cssrem"
        },
        {
          "when": "editorFocus",
          "command": "extension.cssrem.vw-to-px",
          "group": "cssrem"
        },
        {
          "when": "editorFocus",
          "command": "extension.cssrem.vw-switch-px",
          "group": "cssrem"
        },
        {
          "when": "editorFocus",
          "group": "cssrem",
          "command": "extension.cssrem.px-to-rpx"
        },
        {
          "command": "extension.cssrem.rpx-to-px",
          "when": "editorFocus",
          "group": "cssrem"
        },
        {
          "command": "extension.cssrem.rpx-switch-px",
          "when": "editorFocus",
          "group": "cssrem"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "typescript": "^4.6.3",
    "vscode": "^1.1.37",
    "mocha": "^9.2.2",
    "@types/mocha": "^9.1.0",
    "vsce": "^1.100.2",
    "gulp": "^4.0.2",
    "gulp-filter": "^7.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "run-sequence": "^2.2.1",
    "del": "^6.0.0",
    "event-stream": "^4.0.1",
    "vscode-nls-dev": "^4.0.0"
  },
  "dependencies": {
    "vscode-nls": "^5.0.0",
    "jsonc-parser": "^3.0.0"
  }
}
